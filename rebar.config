{port_envs, [
             {"CFLAGS",  "$CFLAGS -Werror -I c_src/innodb/include"},
             {"LDFLAGS", "$LDFLAGS c_src/innodb/lib/libinnodb.a"},

             %% Solaris specific flags
             {"solaris.*-64$", "CFLAGS", "$CFLAGS -m64 -Werror -I c_src/innodb/include"},
             {"solaris.*-64$", "LDFLAGS", "-shared -m64 c_src/innodb/lib/libinnodb.a"},

             %% OS X Leopard flags for 64-bit
             {"darwin9.*-64$", "CFLAGS", "$CFLAGS -m64 -Werror -I c_src/innodb/include"},
             {"darwin9.*-64$", "LDFLAGS", "$LDFLAGS -shared -arch x86_64 c_src/innodb/lib/libinnodb.a"},

             %% OS X Snow Leopard flags for 32-bit
             {"darwin10.*-32$", "CFLAGS", "$CFLAGS -m32 -Werror -I c_src/innodb/include"},
             {"darwin10.*-32$", "LDFLAGS", "$LDFLAGS -arch i386 c_src/innodb/lib/libinnodb.a"}
            ]}.

{port_pre_script, {"c_src/build_deps.sh",
                   "c_src/innodb/lib/libinnodb.a"}}.

{port_cleanup_script, "c_src/build_deps.sh clean"}.

{cover_enabled, true}.
